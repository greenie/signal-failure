{
  "name": "signal-failure",
  "version": "1.0.0",
  "description": "An Alexa skill for checking the status of London Underground, Overground, DLR, and TfL Rail lines.",
  "main": "index.js",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:function": "serverless deploy function -f",
    "deploy:production": "serverless deploy --stage production",
    "predebug:size": "rm -rf .serverless-tmp",
    "debug:size": "serverless package --package .serverless-tmp && cd .serverless-tmp && unzip *.zip && du -sh *"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greenie/signal-failure.git"
  },
  "author": "Joe Green <joe@joegreen.co.uk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greenie/signal-failure/issues"
  },
  "homepage": "https://github.com/greenie/signal-failure#readme",
  "dependencies": {
    "alexa-sdk": "^1.0.11",
    "aws-sdk": "^2.82.0",
    "axios": "^0.16.2"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "serverless": "^1.19.0"
  }
}
